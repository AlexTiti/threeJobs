<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:textSize="@dimen/text_size"
        android:text="@string/update_noticeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/negativeButton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@color/white"

        android:text="@string/cancle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/six_e"
        app:layout_constraintTop_toTopOf="@+id/negativeButton"
        app:layout_constraintBottom_toBottomOf="@+id/negativeButton"
        app:layout_constraintRight_toLeftOf="@+id/positiveButton"
        app:layout_constraintLeft_toRightOf="@+id/negativeButton"></View>

    <Button
        android:id="@+id/positiveButton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:text="@string/update_Hardware"
        android:textColor="@color/text_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</android.support.constraint.ConstraintLayout>