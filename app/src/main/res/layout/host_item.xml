<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:descendantFocusability= "blocksDescendants"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/host_item_layout"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/img_icon_host"
    android:layout_width="@dimen/y15"
    android:layout_height="@dimen/y15"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/x11"/>
    
    <ImageView
        android:id="@+id/image_host_item"
        android:layout_width="@dimen/x54"
        android:layout_marginBottom="@dimen/x8"
        android:layout_marginTop="@dimen/x8"
        android:layout_marginLeft="@dimen/x11"
        android:layout_height="@dimen/x54" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginBottom="@dimen/x8"

        android:layout_marginTop="@dimen/x8"
        >

        <TextView
            android:id="@+id/text_name_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_text_black"
            android:textSize="@dimen/text_size_title_seven"
            android:text="A"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name_host"
            android:layout_marginTop="@dimen/y3"
            android:text="A"
            android:textColor="@color/text_pink"
            android:textSize="@dimen/text_size_small"/>


    </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="@dimen/y30"
        android:layout_height="@dimen/y30"
        android:padding="@dimen/y7"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_like_host"
        android:layout_marginRight="@dimen/x25"
        android:focusable="false"
        android:clickable="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x34"
        android:background="#d5d5d5"
        android:layout_below="@+id/host_item_layout"

        ></View>

</RelativeLayout>