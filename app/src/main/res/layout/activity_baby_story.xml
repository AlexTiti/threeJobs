<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".music.activity.SixItemMusicActivity">

    <ImageView
        android:id="@+id/image_bac"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:src="@drawable/face_child_story_a"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"
       />

        <RelativeLayout
            android:id="@+id/back_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:background="@color/music_divider_story"
            android:scaleType="centerCrop"
            android:alpha="0.7"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x35"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_pic"
            android:layout_width="@dimen/x130"
           android:layout_centerVertical="true"
            android:layout_height="@dimen/y93"
            android:scaleType="fitCenter"
            android:src="@drawable/face_child_story"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/text_titlt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x35"
        android:textColor="@color/white"
        android:textSize="@dimen/x17"
        android:text="AAAAA"
        android:layout_marginTop="@dimen/y18"/>

    <RelativeLayout
        android:layout_width="@dimen/x100"
        android:layout_below="@+id/text_titlt_top"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x36"
        android:layout_marginTop="@dimen/y15">

    <TextView
        android:id="@+id/title_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="@dimen/x9"
        />

    </RelativeLayout>
    <com.findtech.threePomelos.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:id="@+id/id_scrollView" >

        <com.findtech.threePomelos.view.MyListView
         android:background="#00000000"
         android:id="@+id/music_recycle"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/y150"
            android:divider="@null"
            android:fadingEdge="none"
            android:overScrollMode="never"
            >
        </com.findtech.threePomelos.view.MyListView>


    </com.findtech.threePomelos.view.BounceScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"></View>
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28">

        <ImageView
            android:id="@+id/image_back_six"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y23"
            android:paddingBottom="@dimen/y5"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:paddingTop="@dimen/y5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/icon_back"/>
        <TextView
            android:id="@+id/textView_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="AAAAA"
            android:textSize="@dimen/x17"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
    </RelativeLayout>



</RelativeLayout>
