<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.findtech.threePomelos.login.LoginActivity">


    <ImageView
        android:id="@+id/img_logo_login"
        android:layout_width="@dimen/y72"
        android:layout_height="@dimen/y72"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y35"
        android:src="@drawable/logo_login"

        />


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="@dimen/x260"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_logo_login"
        android:layout_marginTop="@dimen/y40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/userView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/login_icon_id" />

                <EditText
                    android:id="@+id/inputnum"
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/y30"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:hint="@string/hint_phone_text"
                    android:imeOptions="actionNext"
                    android:phoneNumber="true"
                    android:textColor="@color/text_color_input"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/text_size_login" />

                <RelativeLayout
                    android:id="@+id/deleteUser"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:layout_alignParentRight="true"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/login_btn_delete_nor" />
                </RelativeLayout>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:src="@color/text_pink" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y15"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/keyguardView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/login_icon_password" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/y30"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:hint="@string/hint_password_text"
                    android:imeOptions="actionNext"
                    android:password="true"
                    android:textColor="@color/text_color_input"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/text_size_login" />

                <RelativeLayout
                    android:id="@+id/deletePassword"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:layout_alignParentRight="true"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/login_btn_delete_nor" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:src="@color/text_pink" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_below="@+id/content"
        android:layout_alignRight="@+id/content"
        android:layout_marginTop="@dimen/y10"
        android:text="@string/find_password"
        android:textColor="@color/hint_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y35"
        android:orientation="vertical">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:orientation="horizontal">-->



            <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1.5"-->
                <!--android:gravity="center"-->
                <!--android:text="快速登录"-->
                <!--android:textColor="#888888"-->
                <!--android:textSize="14sp" />-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wx_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@mipmap/share_wx" />

            <ImageView
                android:id="@+id/wb_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@mipmap/share_wb" />

            <ImageView
                android:id="@+id/qq_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@mipmap/share_qq" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_marginBottom="@dimen/y20"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <Button
            android:id="@+id/login"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y32"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y65"
            android:background="@drawable/login_button_selector"
            android:shadowRadius="0"
            android:text="@string/login"
            android:textSize="@dimen/text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/register"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y32"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:shadowRadius="0"
            android:text="@string/register"
            android:textColor="@color/text_pink" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y8"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loging_notice"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/midle_text"/>

        <TextView
            android:id="@+id/login_ckick_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loging_click"
            android:textSize="@dimen/text_size_small"
            android:textColor="#f58492"/>




    </LinearLayout>

</RelativeLayout>
