<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/text_pink"
        android:fitsSystemWindows="true"
       >

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"></View>
        <TextView
            android:id="@+id/relayout"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y36"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_title"
            android:gravity="center"
            android:fitsSystemWindows="true"
            android:clipToPadding="true"
            android:text="@string/toolbar_user"

            ></TextView>

    </RelativeLayout>



    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImage"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y16"
            android:background="@drawable/page_back"
            />

        <TextView
            android:id="@+id/text_id"
            android:layout_width="@dimen/x150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y16"
            android:layout_toRightOf="@id/circleImage"
            android:singleLine="true"
            android:text="@string/baby_niName"
            android:textColor="@color/home_text_black"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/text_age_user"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y15"
            android:layout_below="@+id/text_id"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y8"
            android:layout_toRightOf="@id/circleImage"
            android:singleLine="true"
            android:gravity="center_vertical"

            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:layout_width="@dimen/x8"
            android:layout_height="@dimen/y10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:src="@drawable/combinedshapecopy" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#edf0f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/text_height_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:text="@string/height"
            android:textColor="@color/text_black_color"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#edf0f3" />

        <TextView
            android:id="@+id/text_weight_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:text="@string/weight"
            android:textColor="@color/text_black_color"
            android:layout_weight="1" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:background="#edf0f3" />

    <RelativeLayout
        android:id="@+id/faceback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/icon_01"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_feedback" />

        <TextView
            android:id="@+id/app_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@+id/icon_01"
            android:gravity="center"
            android:text="@string/faceback"
            android:textColor="@color/home_text_black"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image_line"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/app_info_title"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/app_info_title"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/app_info_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y10"
            android:layout_alignRight="@+id/image_line"
            android:layout_centerVertical="true"
            android:background="@mipmap/personal_arrowright_icon" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/icon_02"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_update" />

        <TextView
            android:id="@+id/app_info_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/icon_02"
            android:gravity="center"
            android:text="@string/update"
            android:layout_marginTop="@dimen/y10"
            android:textColor="@color/home_text_black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_update_notice"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x12"
            android:layout_toRightOf="@+id/app_info_title2"
            android:gravity="center"
            android:layout_alignBottom="@+id/app_info_title2"
            android:textColor="@color/text_pink"
            android:layout_marginTop="@dimen/y2"
            android:layout_marginLeft="@dimen/x8"
            android:textSize="@dimen/text_size_little"
            android:text="New"
            android:background="@drawable/notice_bac"
           />

        <ImageView
            android:id="@+id/image_line2"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/app_info_title2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/app_info_title2"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/app_info_arrow_right2"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignRight="@+id/image_line2"
            android:layout_centerVertical="true"
            android:background="@mipmap/personal_arrowright_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_common_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        >


        <ImageView
            android:id="@+id/icon_common"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:scaleType="centerCrop"
            android:src="@drawable/common_problem" />
        <TextView
            android:id="@+id/title2_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            android:layout_toRightOf="@+id/icon_common"
            android:text="@string/common_problem"
            android:textColor="@color/home_text_black"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image_line2_common"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/title2_common"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title2_common"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/app_info_arrow_right2_common"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignRight="@+id/image_line2_common"
            android:layout_centerVertical="true"
            android:background="@mipmap/personal_arrowright_icon" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_04"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_aboutus" />

        <TextView
            android:id="@+id/app_info_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@+id/icon_04"
            android:gravity="center"
            android:text="@string/about_us"
            android:textColor="@color/home_text_black"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image_line4"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/app_info_title4"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/app_info_title4"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/app_info_arrow_right4"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignRight="@+id/image_line4"
            android:layout_centerVertical="true"
            android:background="@mipmap/personal_arrowright_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <Button
            android:id="@+id/text_out"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/y29"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y26"
            android:text="@string/logout"
            android:gravity="center"
            android:textColor="@color/text_pink"
           android:background="@drawable/button_bac"
            android:textSize="@dimen/text_size"
            />

        
    </RelativeLayout>
    
    
    
</LinearLayout>