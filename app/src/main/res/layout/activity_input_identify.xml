<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.findtech.threePomelos.login.ForgetPasswordActivity">

    <!--<include-->
        <!--android:id="@+id/custom_actionbar"-->
        <!--layout="@layout/toolbar_layout" />-->

    <EditText
        android:id="@+id/input_identify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/custom_actionbar"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:hint="@string/hint_identify_text"
        android:textColorHint="@color/text_color_hint"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:phoneNumber="true" />

    <Button
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/input_identify"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_button_selector"
        android:text="@string/next_step"
        android:textColor="@color/white" />

</RelativeLayout>
