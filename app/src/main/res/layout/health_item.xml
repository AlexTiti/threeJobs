<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_health"
            android:layout_width="@dimen/x306"
            android:layout_height="@dimen/x1"
            android:layout_centerHorizontal="true"
            android:background="@color/text_pink"/>
        <ImageView
            android:id="@+id/ima"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x50"

            android:src="@drawable/developmentalsigns"/>

        <TextView
            android:id="@+id/text_2"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x10"
            android:textColor="@color/divider_color"
            android:text="好的照顾她"
            android:gravity="center"
            android:layout_alignBottom="@+id/ima"
            android:layout_marginBottom="@dimen/x10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"/>

        <TextView
            android:id="@+id/text_content"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x10"
            android:textColor="@color/divider_color"
            android:layout_above="@+id/text_2"
            android:text="学会观察宝宝才能更"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/x40"/>
        <TextView
            android:id="@+id/text_title"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x15"
            android:textColor="@color/text_black_color"
            android:layout_above="@+id/text_content"
            android:text="发育体征"
            android:layout_marginBottom="@dimen/x10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:gravity="center"/>


</RelativeLayout>