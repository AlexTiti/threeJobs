<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x14"
        android:layout_marginTop="@dimen/y20"
        android:textSize="@dimen/text_size_title"
        android:text="@string/action_more"
        android:textColor="@color/grey_color"/>


    <LinearLayout
        android:id="@+id/layout_repair_popwindow"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal"
        android:visibility="gone"

        >

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:src="@drawable/icon_repair"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/textV_repaire"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x14"
            android:text="@string/repair"
            android:textColor="@color/grey_color"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_changeName_popwindow"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:src="@drawable/name_change"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x14"
            android:text="@string/name_change"
            android:textColor="@color/grey_color"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_update_popwindow"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:src="@drawable/fir_update"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/textV_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x14"
            android:gravity="center"
            android:text="@string/up_date"
            android:textColor="@color/grey_color"
            android:textSize="@dimen/text_size"/>

        <Button
            android:id="@+id/text_update_notice"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x14"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/text_size_little"
            android:background="@drawable/launch_bac"
            android:text="New"
            android:visibility="invisible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x15"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/text_update_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_code_popwindow"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:src="@drawable/icon_code"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/code_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x14"
            android:text="@string/code"
            android:textColor="@color/grey_color"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>

