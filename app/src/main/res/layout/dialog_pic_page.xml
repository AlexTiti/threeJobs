<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_title_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:textSize="@dimen/text_size_title_seven"
        android:textColor="@color/grey_color"
        android:text="@string/record_growth"
        />

    <LinearLayout
        android:layout_below="@+id/text_title_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:paddingBottom="@dimen/y25"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y5"
            android:layout_weight="1"></View>

        <LinearLayout
            android:id="@+id/layout_take_page"
            android:layout_width="@dimen/y50"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_take_pic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:textColor="@color/grey_color"
                android:gravity="center"
                android:text="@string/pic_chooser_camera"/>
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y5"
            android:layout_weight="1"></View>

        <LinearLayout
            android:id="@+id/layout_show_page"
            android:layout_width="@dimen/y56"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_show_pic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:gravity="center"
                android:textColor="@color/grey_color"
                android:text="@string/pic_chooser_gallery"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y5"
            android:layout_weight="1"></View>
    </LinearLayout>

</RelativeLayout>